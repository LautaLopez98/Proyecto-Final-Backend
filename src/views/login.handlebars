{{>menu}}
<hr>
<section class="container">
    <section class="login">
        <form id="formLogin" action="/api/sessions/login" method="post">
            <h1>Login:</h1>
            <div class="formulario">
                <label>Ingresá tu email</label>
                <input type="email" name="email" placeholder="Correo electrónico" required>
            </div>
            <div class="formulario">
                <label>Ingresá tu contraseña</label>
                <input type="password" name="password" placeholder="Contraseña" required>
            </div>
            <input type="hidden" name="redirect" value="true">
            <div class="formulario">
                {{#if error}}
                    <div style="font-weight: bold; color: rgb(255, 31, 1);">{{error}}</div>
                {{/if}}
            </div>
            <div class="formulario">
                <button type="submit" value="Login">Ingresar</button>
                <button type="button"><a href="/api/sessions/github?redirect=true">Ingresar con Github</a></button>
                <button type="button"><a href="/sendpassword">Olvidé mi contraseña</a></button>
                <button type="button"><a href="/registro">No tenes usuario? Registrate acá</a></button>
            </div>
        </form>
        <br><br>
    </section>
</section>
<script src="js/login.js"></script>
